<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="com.monke.mosubtitleviewlib.MoSubtitleView">

    <com.monke.mosubtitleviewlib.MoSubtitleItemView
        android:id="@+id/sub_bottom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:mosubtitle_childCount="4" />

    <com.monke.mosubtitleviewlib.MoSubtitleItemView
        android:id="@+id/sub_left"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:transformPivotX="0dp"
        app:mosubtitle_childCount="3" />

    <com.monke.mosubtitleviewlib.MoSubtitleItemView
        android:id="@+id/sub_left_top"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:mosubtitle_childCount="3" />

    <com.monke.mosubtitleviewlib.MoSubtitleItemView
        android:id="@+id/sub_right"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:rotation="90"
        app:mosubtitle_childCount="3" />

    <com.monke.mosubtitleviewlib.MoSubtitleItemView
        android:id="@+id/sub_right_top"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:mosubtitle_childCount="3" />
</merge>